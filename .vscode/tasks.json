// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
  "tasks": [
    // Create bin
    {
      "type": "shell",
      "label": "c++: create bin directory",
      "linux": {
        "command": "mkdir -p ${fileDirname}/bin/cplusplus"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "rust: create bin directory",
      "linux": {
        "command": "mkdir -p ${fileDirname}/bin/rust"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "c++: clean",
      "linux": {
        "command": "rm",
        "args": [
          "-rfv",
          "bin/cplusplus/'*'"
        ]
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "shell",
      "label": "rust: clean",
      "linux": {
        "command": "rm",
        "args": [
          "-rfv",
          "bin/rust/'*'"
        ],
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "cppbuild",
      "label": "g++ debug build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-O2",
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/bin/cplusplus/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "c++: create bin directory",
        "c++: clean"
      ],
      "detail": "Task generated by Debugger.",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "type": "cppbuild",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "${file}",
        "-o",
        "${fileDirname}/bin/cplusplus/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "dependsOn": [
        "c++: create bin directory",
        "c++: clean"
      ],
      "detail": "Task generated by Debugger.",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "rustc build active file",
      "command": "rustc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/bin/rust/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build",
      "dependsOn": [
        "rust: create bin directory",
        "rust: clean"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}